= simple_form_for @course, remote: true do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  = f.input :language, collection: LanguageList::COMMON_LANGUAGES
  = f.input :description
  = f.input :prerequisites
  = f.input :duration, as: :datetimepicker
  = f.submit 'Save', class: "button"
