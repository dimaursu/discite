%p#notice= notice

%p
  %b Title:
  = @course.title
%p
  %b Description:
  = @course.description
%p
  %b Made by:
  = @course.user.handle
%p
  %b Language:
  = @course.language
%p
  %b Prerequisites:
  = @course.prerequisites
%p
  %b Starts in:
  = distance_of_time_in_words(Time.now, @course.starts_at)
%p
  %b Duration:
  = @course.duration

.row
  = link_to 'Edit', edit_course_path(@course), class: "button"
  = link_to 'Run', course_start_path(@course), class: "button"
  = link_to 'Back', courses_path, class: "button"

