!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Discite"
    = favicon_link_tag
    = stylesheet_link_tag    "application"
    = csrf_meta_tags
  %body
    = render 'shared/nav_bar'
    %section.main
      .row
        .small-12.large-12.columns
          - if notice
            .alert-box.notice
              = notice
              %a.close{href: "#"} ×
          - if alert
            .alert-box.alert
              =alert
              %a.close{href: "#"} ×
          = yield
      #root_footer
    = render 'shared/footer'
    = javascript_include_tag "application"

